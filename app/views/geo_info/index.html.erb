<div class="contextual">
  <%= link_to_if_authorized(l(:label_geo_info_new), 
                            {:action => 'new', :project_id => @project}, 
                            :class => 'icon icon-add') %>
</div>


<table border="1">

  <tr>
    <td>ID</td><td><%= l("label_name") %></td><td><%= l("label_geo_type") %></td><td><%= l("label_longitude") %></td><td><%= l("label_latitude") %></td>
  </tr>  
  <% for g in @geo_infos %>
  
  <tr>
    <td><%= g.id %></td><td><%= g.name %></td><td><%= g.geo_type_label %></td><td><%= g.longitude %></td><td><%= g.latitude %></td>
  </tr>  
  <% end %>
</table>
