<script src="http://code.jquery.com/ui/1.8.22/jquery-ui.min.js" type="text/javascript"></script>
<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
<script type="text/javascript">

  PROJECT_ID = "<%= @project.identifier %>";
  function CustomerController($scope, $http){
    $scope.customers = [];
    
    $scope.change = function(si) {
      $http.get("customer/search.json?project_id=" + PROJECT_ID + "&q=" + si).success( function(data) {
        cs = [];
        for( c in data){
          cs[c] = (data[c]["customer"]);
        }
        $scope.customers = cs;
      })
    };
  }

</script>


<h2>お客様情報</h2>

<div  ng-app ng-controller="CustomerController">

        <div>
          メイン検索:<input ng-model="s1" ng-change="change(s1)" /> <br />
          サブ検索:<input ng-model="searchText" /> <br />
        </div>
        
        <ul class="users">
          <li ng-repeat="c in customers | filter:searchText">
            {{c.family_name}} {{c.first_name}} {{c.phone_number}} {{c.address}}
          </li>
        </ul>

</div>

