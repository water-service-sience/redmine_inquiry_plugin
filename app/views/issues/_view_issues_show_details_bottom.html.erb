<script type="text/javascript">
  PROJECT_ID = <%= @project.id %>;
  $j = $.noConflict();
  function initialize() {
    geo_info_id = <%= geo_info.id %>;
    init_map("map_canvas");
    
    $j.getJSON("../../../geo_info/geo_info/" + geo_info_id + ".json?project_id=" + PROJECT_ID , function(data) {
      set_geo_point(data);
    })
    
  }

  $j(document).ready(function() {
    initialize();
  });
</script>

<span>
    
